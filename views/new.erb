<!-- # create: [1:form] "GET /new" name,desc,.. => "POST /recipes" => app.rb to add recipe => redirect to "/"
http://www.sinatrarb.com/intro.html#Routes -->

<form action="/recipes" method="post">
  <!--
    @name        = name
    @description = desc
    @rating      = rating
    @done        = done
    @prep_t      = prep_t
    @path        = path
  -->
  <label for="title">Title</label>
  <input type="text" name="title" id="title" required>
  <br>
  <label for="desc">Description</label>
  <input type="text" name="desc" id="desc" required>
  <br>
  <label for="rating">Rating</label>
  <input type="number" name="rating" id="rating" required>
  <br>
  <label for="prep_t">Prep time</label>
  <input type="number" name="prep_t" id="prep_t" required>
  <br>
  <label for="path">Path</label>
  <input type="text" name="path" id="path">
  <br>
  <button type="submit">Submit Recipe</button>
</form>
<a href="/">Go back</a>
